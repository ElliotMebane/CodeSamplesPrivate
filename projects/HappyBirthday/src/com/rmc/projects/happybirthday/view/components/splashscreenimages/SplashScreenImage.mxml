<s:SplashScreenImage xmlns:fx="http://ns.adobe.com/mxml/2009" 
					 xmlns:s="library://ns.adobe.com/flex/spark"
					 
					 >
	
	<!-- 
	
		Default splashscreen image.
	
			* This will be used in all cases UNLESS there 
	 		  is another more specific case below that is correct
	
	-->
	<s:SplashScreenImageSource 
		source="@Embed('../assets_compiletime/images/splashscreenimages/Default.png')"
		/>
	
	<!-- IPAD  -->
	<s:SplashScreenImageSource 
		source="@Embed('../assets_compiletime/images/splashscreenimages/Default-Portrait.png')"
		dpi="160" 
		aspectRatio="portrait"/>
	
	<s:SplashScreenImageSource 
		source="@Embed('../assets_compiletime/images/splashscreenimages/Default-Landscape.png')"
		dpi="160" 
		aspectRatio="landscape"/>
	
</s:SplashScreenImage>



